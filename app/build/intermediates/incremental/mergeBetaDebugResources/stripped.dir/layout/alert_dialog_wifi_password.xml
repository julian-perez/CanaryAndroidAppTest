<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/alert_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/incorrect_wifi"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:customFont="Gibson-Light.otf" />

    <is.yranac.canary.ui.views.TextViewPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="@string/check_wifi"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:customFont="Gibson-Light.otf" />

    <is.yranac.canary.ui.views.EditTextPlus
        android:layout_width="240dp"
        android:id="@+id/wifi_password_edit_text"
        android:layout_height="69dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:hint="@string/wifi_password"
        android:textColorHint="@color/light_gray"
        android:background="@color/white"
        app:customFont="Gibson-Light.otf" />

    <View
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp">

        <is.yranac.canary.ui.views.ButtonPlus
            android:id="@+id/start_over_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:text="@string/start_over"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:customFont="Gibson.otf" />

        <is.yranac.canary.ui.views.ButtonPlus
            android:id="@+id/retry_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:text="@string/retry"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:customFont="Gibson.otf" />

    </LinearLayout>
</LinearLayout>