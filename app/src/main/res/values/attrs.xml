<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
        <!-- Style of the icon indicator's views. -->
        <attr name="vpiIconPageIndicatorStyle" format="reference" />
        <!-- Style of the line indicator. -->
        <attr name="vpiLinePageIndicatorStyle" format="reference" />
        <!-- Style of the title indicator. -->
        <attr name="vpiTitlePageIndicatorStyle" format="reference" />
        <!-- Style of the tab indicator's tabs. -->
        <attr name="vpiTabPageIndicatorStyle" format="reference" />
        <!-- Style of the underline indicator. -->
        <attr name="vpiUnderlinePageIndicatorStyle" format="reference" />
    </declare-styleable>

    <attr name="selectedColor" format="color" />
    <attr name="unselectedColor" format="color" />

    <attr name="centered" format="boolean" />
    <attr name="strokeWidth" format="dimension" />

    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius" format="dimension" />
        <!-- This is used to tweak the spacing between circles which defaults to 1 radius (when threeRadiusRadius will be 3). -->
        <!-- For some reason needs to be defined as dimension rather than float (although the class reads it as float)        -->
        <attr name="threeRadiusRadius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>


    <declare-styleable name="circleview">
        <attr name="cRadius" format="integer" />
        <attr name="cFillColor" format="color" />
        <attr name="cStrokeColor" format="color" />
        <attr name="cAngleStart" format="integer" />
        <attr name="cAngleEnd" format="integer" />
    </declare-styleable>

    <attr name="customFont" format="string" />

    <declare-styleable name="TextViewPlus">
        <attr name="customFont" />
    </declare-styleable>
    <declare-styleable name="ButtonPlus">
        <attr name="customFont" />
    </declare-styleable>

    <attr name="textColor" format="color" />
    <attr name="labelColor" format="color" />
    <attr name="label" format="string" />
    <attr name="hint" format="string" />
    <attr name="editable" format="boolean" />

    <declare-styleable name="EditTextWithLabel">
        <attr name="label" />
        <attr name="hint" />
        <attr name="editable" />
        <attr name="labelColor" />
        <attr name="textColor" />
        <attr name="android:inputType" />
        <attr name="android:text" />
        <attr name="android:maxLength" />
    </declare-styleable>

    <declare-styleable name="ShimmerView">
        <attr name="reflectionColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string" />
        <attr name="textColor" />
        <attr name="textSize" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="bar_width" format="dimension" />
        <attr name="bar_length" format="dimension" />
        <attr name="delayMillis" format="dimension" />
        <attr name="contourColor" format="color" />
        <attr name="contourSize" format="float" />
    </declare-styleable>

    <declare-styleable name="TriangleView">
        <attr name="customRotation" format="enum">
            <enum name="down" value="0" />
            <enum name="up" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
        <attr name="triangle_color" format="color" />
    </declare-styleable>


    <declare-styleable name="ArrowView">
        <attr name="arrow_color" format="color" />
    </declare-styleable>
    <declare-styleable name="FixedAspectRatioImageView">
        <attr name="aspectRatioWidth" format="integer" />
        <attr name="aspectRatioHeight" format="integer" />
    </declare-styleable>

    <declare-styleable name="ShimmerFrameLayout">
        <attr name="auto_start" format="boolean" />
        <attr name="base_alpha" format="float" />
        <attr name="duration" format="integer" />
        <attr name="repeat_count" format="integer" />
        <attr name="repeat_delay" format="integer" />
        <attr name="repeat_mode" format="enum">
            <enum name="restart" value="1" />
            <enum name="reverse" value="2" />
        </attr>
        <attr name="angle" format="enum">
            <enum name="cw_0" value="0" />
            <enum name="cw_90" value="90" />
            <enum name="cw_180" value="180" />
            <enum name="cw_270" value="270" />
        </attr>
        <attr name="dropoff" format="float" />
        <attr name="fixed_width" format="dimension" />
        <attr name="fixed_height" format="dimension" />
        <attr name="intensity" format="float" />
        <attr name="relative_width" format="float" />
        <attr name="relative_height" format="float" />
        <attr name="shape" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
        </attr>
        <attr name="tilt" format="float" />
    </declare-styleable>

    <attr name="ColorScheme" format="enum">
        <enum name="white" value="0" />
        <enum name="light" value="1" />
    </attr>

    <!--Battery Indicator-->
    <declare-styleable name="BatteryIndicator">
        <attr name="charge_remaining" format="integer" />
        <attr name="indicator_type" format="integer" />
        <attr name="ColorScheme" />
    </declare-styleable>

    <!--Wifi Level-->
    <declare-styleable name="WifiLevel">
        <attr name="wifi_level" format="integer" />
        <attr name="ColorScheme" />
    </declare-styleable>

    <declare-styleable name="Pulsator">
        <attr name="pulse_count" format="integer" />
        <attr name="pulse_duration" format="integer" />
        <attr name="pulse_color" format="color" />
        <attr name="pulse_repeat" format="integer" />
        <attr name="pulse_startFromScratch" format="boolean" />
    </declare-styleable>

</resources>