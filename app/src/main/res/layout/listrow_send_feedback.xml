<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/very_light_gray_two"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/how_is_your_experience_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="center"
            android:orientation="vertical">

            <is.yranac.canary.ui.views.TextViewPlus
                style="@style/setup_medium_text_view_black"
                android:layout_marginBottom="@dimen/large_margin"
                android:gravity="center"
                android:text="@string/how_is_your_canary_expierence" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <is.yranac.canary.ui.views.ButtonPlus
                    android:id="@+id/not_great_btn"
                    style="@style/small_white_rectangle_btn"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="@string/not_great" />

                <is.yranac.canary.ui.views.ButtonPlus
                    android:id="@+id/excellent_btn"
                    style="@style/small_white_rectangle_btn"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="@string/excellent" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spread_the_word_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <is.yranac.canary.ui.views.TextViewPlus
                style="@style/setup_medium_text_view_black"
                android:layout_marginBottom="@dimen/large_margin"
                android:gravity="center"
                android:text="@string/will_your_help_spread_the_word_on_amazon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <is.yranac.canary.ui.views.ButtonPlus
                    android:id="@+id/no_thanks_btn"
                    style="@style/small_white_rectangle_btn"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="@string/no_thanks_period" />

                <is.yranac.canary.ui.views.ButtonPlus
                    android:id="@+id/write_a_review"
                    style="@style/small_white_rectangle_btn"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="@string/write_a_review" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/give_us_feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="center"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:orientation="vertical"
            android:visibility="invisible">

            <is.yranac.canary.ui.views.TextViewPlus
                style="@style/setup_medium_text_view_black"
                android:layout_marginBottom="@dimen/large_margin"
                android:gravity="center"
                android:text="@string/would_you_like_to_give_us_feedback" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <is.yranac.canary.ui.views.ButtonPlus
                    android:id="@+id/no_thanks_feedback_btn"
                    style="@style/small_white_rectangle_btn"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="@string/no_thanks" />

                <is.yranac.canary.ui.views.ButtonPlus
                    android:id="@+id/yes_sure_btn"
                    style="@style/small_white_rectangle_btn"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="@string/yes_sure" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thanks_for_letting_us_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:visibility="invisible">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                app:srcCompat="@drawable/green_check_mark_circle" />

            <is.yranac.canary.ui.views.TextViewPlus
                style="@style/setup_medium_text_view_black"
                android:layout_marginBottom="@dimen/large_margin"
                android:gravity="center"
                android:text="@string/thanks_for_letting_us_know" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/how_is_your_experience_layout"
            android:background="@color/very_light_gray_three" />
    </RelativeLayout>
</layout>