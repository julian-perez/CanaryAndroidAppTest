<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/temp_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/temp_icon"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_temp" />

            <TextView
                android:id="@+id/device_temp_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="74Â°F"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/humidity_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <ImageView
                android:id="@+id/humidity_icon"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_humidity" />

            <TextView
                android:id="@+id/device_humidity_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35%"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/air_quality_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/device_air_quality_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/aq_float_icon_normal" />

            <TextView
                android:id="@+id/device_air_quality_offline_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="@string/em_dash"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/device_air_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/air"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</layout>