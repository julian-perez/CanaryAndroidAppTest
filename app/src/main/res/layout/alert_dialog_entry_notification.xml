<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/alert_notification_date_text_view"
        style="@style/setup_small_text_view"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        app:customFont="Gibson.otf" />

    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/alert_notification_title_text_view"
        style="@style/setting_prompt_title_text"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        app:customFont="Gibson-Light.otf" />

    <is.yranac.canary.ui.views.ButtonPlus
        android:id="@+id/alert_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/go_to_activity"
        android:background="@color/light_gray"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:customFont="Gibson.otf"/>
</LinearLayout>