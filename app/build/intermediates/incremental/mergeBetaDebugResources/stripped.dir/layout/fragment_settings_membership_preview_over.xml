<?xml version="1.0" encoding="utf-8"?>
                                                                   


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false" android:tag="layout/fragment_settings_membership_preview_over_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/location_address_label"
                style="@style/small_bold"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:includeFontPadding="true" />


            <is.yranac.canary.ui.views.TextViewPlus
                style="@style/large_text_view"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="@string/your_preview_ended" />


            <is.yranac.canary.ui.views.TextViewPlus
                style="@style/setup_medium_text_view_black"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:id="@+id/preview_ended_dsc_text_view"
                android:text="@string/your_preview_ended_dsc" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/device_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:gravity="bottom"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/device_one_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:src="@drawable/flex_1" />

                <ImageView
                    android:id="@+id/device_two_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:src="@drawable/plus_1" />

                <ImageView
                    android:id="@+id/device_three_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:src="@drawable/flex_1" />

                <ImageView
                    android:id="@+id/device_four_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:src="@drawable/plus_1" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/big_blue_line"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="19dp"
                        android:layout_marginTop="19dp"
                        android:background="@drawable/blue_gradient_line" />

                    <is.yranac.canary.ui.views.TextViewPlus
                        android:id="@+id/twenty_four_hours"
                        style="@style/small_bold"
                        android:layout_gravity="center"
                        android:text="@string/twenty_four_shared_video"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/device_hour_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <LinearLayout
                        android:id="@+id/device_layout_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="19dp"
                            android:background="@drawable/blue_gradient_line" />

                        <is.yranac.canary.ui.views.TextViewPlus
                            android:id="@+id/device_hours_one"
                            style="@style/small_bold"
                            android:text="6 HRS"
                            android:textColor="@color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/device_layout_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="19dp"
                            android:background="@drawable/blue_gradient_line" />

                        <is.yranac.canary.ui.views.TextViewPlus
                            android:id="@+id/device_hours_two"
                            style="@style/small_bold"
                            android:text="6 HRS"
                            android:textColor="@color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/device_layout_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="19dp"
                            android:background="@drawable/blue_gradient_line" />

                        <is.yranac.canary.ui.views.TextViewPlus
                            android:id="@+id/device_hours_three"
                            style="@style/small_bold"
                            android:text="6 HRS"
                            android:textColor="@color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/device_layout_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginBottom="19dp"
                            android:layout_marginTop="19dp"
                            android:background="@drawable/blue_gradient_line" />

                        <is.yranac.canary.ui.views.TextViewPlus
                            android:id="@+id/device_hours_four"
                            style="@style/small_bold"
                            android:text="6 HRS"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:orientation="vertical">

            <is.yranac.canary.ui.views.ButtonPlus
                android:id="@+id/add_a_membersip_button"
                style="@style/blue_button"
                android:layout_marginBottom="10dp"
                android:text="@string/add_membership" />

            <is.yranac.canary.ui.views.ButtonPlus
                android:id="@+id/continue_preview_button"
                style="@style/gray_rect_button"
                android:text="@string/continue_without_membership" />

        </LinearLayout>

    </RelativeLayout>
         