<?xml version="1.0" encoding="utf-8"?>

                                                        

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" android:tag="layout/layout_homehealth_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/temp_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/temp_icon"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_temp" />

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/device_temp_textview"
                style="@style/small_bold"
                android:text="74Â°F"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/humidity_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/humidity_icon"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/ic_humidity" />

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/device_humidity_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35%"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:customFont="Gibson-SemiBold.otf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/air_quality_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/device_air_quality_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/aq_float_icon_normal" />

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/device_air_quality_offline_icon"
                style="@style/small_bold"
                android:layout_marginRight="8dp"
                android:text="@string/em_dash"
                android:textColor="@color/white"
                android:visibility="gone" />

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/device_air_textview"
                style="@style/small_bold"
                android:text="@string/air"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
         