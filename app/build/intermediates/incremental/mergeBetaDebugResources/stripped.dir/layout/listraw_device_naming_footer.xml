<?xml version="1.0" encoding="utf-8"?>

                                                        

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_row_height"
        android:minHeight="@dimen/standard_row_height"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingRight="@dimen/standard_margin"
        android:orientation="vertical" android:tag="layout/listraw_device_naming_footer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <is.yranac.canary.ui.views.EditTextPlus
            android:id="@+id/name_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:hint="@string/name_custom"
            android:textColorHint="@color/dark_gray"
            android:inputType="textCapWords|textNoSuggestions"
            android:maxLength="50"
            android:textSize="20sp"
            app:customFont="Gibson-Light.otf" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/check_mark"
            style="@style/radio_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:paddingRight="4dp" />


        <include
            layout="@layout/layout_gray_bar"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="@color/very_light_gray" />
    </RelativeLayout>

         