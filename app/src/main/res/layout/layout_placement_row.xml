<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/large_margin"
    android:paddingRight="@dimen/large_margin">

    <ImageView
        android:id="@+id/to_do_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/do_1" />

    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/placement_guideline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:customFont="Gibson-SemiBold.otf" />

    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/placement_guideline_dsc"
        style="@style/setup_medium_text_view_black"
        android:gravity="center" />

</LinearLayout>