<?xml version="1.0" encoding="utf-8"?>


                                                        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible" android:tag="layout/layout_header_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin">

            <is.yranac.canary.ui.views.ButtonPlus
                android:id="@+id/header_view_left_button"
                style="@style/green_action_btn"
                android:background="@drawable/button_header_logout"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/logout"
                app:customFont="Gibson-SemiBold.otf" />

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/header_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/header_view_right_button"
                android:layout_toRightOf="@+id/header_view_left_button"
                android:ellipsize="start"
                android:gravity="center"
                android:letterSpacing="0.09"
                android:lines="1"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:customFont="Gibson-SemiBold.otf" />

            <is.yranac.canary.ui.views.ButtonPlus
                android:id="@+id/header_view_right_button"
                style="@style/green_action_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/logout"
                app:customFont="Gibson-SemiBold.otf" />
        </RelativeLayout>

        <include layout="@layout/layout_gray_bar" />

    </LinearLayout>
         