<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/create_passcode_text_view"
        style="@style/setup_large_text"
        android:layout_below="@+id/spotlight_icon_image_view_holder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="@string/enter_passcode"
        android:textColor="@color/white"
        app:customFont="Gibson-Light.otf" />


    <EditText
        android:id="@+id/passcode_edit_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/passcode_layout"
        android:layout_alignLeft="@+id/passcode_layout"
        android:layout_alignRight="@+id/passcode_layout"
        android:layout_alignTop="@+id/passcode_layout"
        android:background="@color/black"
        android:digits="1234567890"
        android:inputType="number">

        <requestFocus />
    </EditText>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/spotlight_icon_image_view_holder"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/canary_c_light" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/passcode_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_passcode_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:id="@+id/passcode_char_one"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_white"
                android:visibility="invisible" />

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/dash_line_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:id="@+id/passcode_char_two"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_white"
                android:visibility="invisible" />

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/dash_line_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:id="@+id/passcode_char_three"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_white"
                android:visibility="invisible" />

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/dash_line_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:id="@+id/passcode_char_four"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_white"
                android:visibility="invisible" />

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/dash_line_white" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>