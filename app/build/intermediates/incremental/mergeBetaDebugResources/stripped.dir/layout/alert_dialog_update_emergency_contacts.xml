<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/alert_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/update_emergency_contacts_title"
        android:textSize="20sp"
        app:customFont="Gibson-Light.otf" />

    <LinearLayout
        android:id="@+id/icon_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/emergency_police_icon_red" />

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/emergency_fire_icon_red" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/emergency_ambulance_icon_red" />


    </LinearLayout>

    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/alert_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/update_emergency_contacts_dsc"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:customFont="Gibson-Light.otf" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <is.yranac.canary.ui.views.ButtonPlus
            android:id="@+id/alert_button_left"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:text="@string/cancel"
            app:customFont="Gibson.otf" />

        <is.yranac.canary.ui.views.ButtonPlus
            android:id="@+id/alert_button_right"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/light_gray"
            android:textColor="@color/black"
            android:text="@string/update"
            android:textSize="13sp"
            app:customFont="Gibson.otf" />

    </LinearLayout>
</LinearLayout>