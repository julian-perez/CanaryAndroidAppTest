<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/setting_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_row_height"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:orientation="vertical">

        <is.yranac.canary.ui.views.TextViewPlus
            android:id="@+id/setting_label"
            style="@style/setup_medium_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            app:customFont="Gibson.otf"/>

        <is.yranac.canary.ui.views.EditTextPlus
            android:id="@+id/setting_edit_text"
            style="@style/setting_prompt_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_address"
            android:lines="1"
            android:inputType="textCapWords"
            app:customFont="Gibson-Light.otf"/>
    </LinearLayout>

    <include layout="@layout/layout_gray_bar_with_full_margin"/>

</LinearLayout>