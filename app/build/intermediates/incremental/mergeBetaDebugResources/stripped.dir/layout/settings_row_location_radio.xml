<is.yranac.canary.ui.views.CustomRadioLocationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standard_row_height"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="@dimen/standard_margin"
    android:paddingRight="@dimen/standard_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingEnd="30dp">

        <is.yranac.canary.ui.views.TextViewPlus
            android:id="@+id/row_name"
            style="@style/small_bold"
            android:textAllCaps="false"
            app:customFont="Gibson.otf"
            tools:ignore="RelativeOverlap" />

        <is.yranac.canary.ui.views.TextViewPlus
            android:id="@+id/row_address"
            style="@style/large_text_view"
            tools:ignore="RelativeOverlap" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/check_mark"
        style="@style/radio_btn_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:paddingEnd="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/very_light_gray" />
</is.yranac.canary.ui.views.CustomRadioLocationView>