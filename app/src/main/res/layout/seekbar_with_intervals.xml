<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:clipChildren="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/entry_seek_bar_background" />

        <View
            android:id="@+id/seek_bar_buffer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/entry_seek_bar_buffer_background" />

        <View
            android:id="@+id/seek_bar_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/entry_seek_bar_background_progress" />

        <RelativeLayout
            android:id="@+id/intervals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" />

    </RelativeLayout>


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:maxHeight="8dp"
        android:progressDrawable="@drawable/entry_seek_bar_drawable"
        android:thumb="@drawable/playhead" />

</RelativeLayout>
