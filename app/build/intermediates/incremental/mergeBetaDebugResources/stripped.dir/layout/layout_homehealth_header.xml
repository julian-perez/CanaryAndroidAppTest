<?xml version="1.0" encoding="utf-8"?>
        

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible" android:tag="layout/layout_homehealth_header_0">

        <is.yranac.canary.ui.views.TextViewPlus
            android:id="@+id/header_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="start"
            android:gravity="center"
            android:lines="1"
            android:maxLength="37"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/dark_moderate_cyan"
            android:textSize="12sp"
            app:customFont="@string/gibson_semi_bold" />

        <ImageView
            android:id="@+id/header_view_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/store_icn_apple_watch" />

        <include
            layout="@layout/layout_gray_bar"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
         