<?xml version="1.0" encoding="utf-8"?>

                                                                   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent" android:tag="layout/fragment_device_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_screen_background"
            android:gravity="center"
            android:scaleType="centerCrop" />

        <!-- Device semitransparent grey over devices and under -->
        <!-- overlay elements so that overlay text will pop     -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_fifteen" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            android:indeterminateTintMode="src_in" />


        <include
            android:id="@+id/device_info_layout"
            layout="@layout/layout_device_statatics" />


        <RelativeLayout
            android:id="@+id/tutorial_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </RelativeLayout>
         