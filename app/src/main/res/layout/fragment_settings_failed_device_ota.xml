<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/canary_failed_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <is.yranac.canary.ui.views.ButtonPlus
            android:id="@+id/help_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_circle_gray_ring"
            android:text="@string/question_mark"
            android:textColor="@color/dark_gray"
            app:customFont="Gibson-SemiBold.otf" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="78dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <is.yranac.canary.ui.views.TextViewPlus
                style="@style/large_text_view"
                android:text="@string/setup_failed" />

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/setup_failed_dsc_text_view"
                style="@style/setup_medium_text_view_black"
                android:layout_marginTop="10dp"
                android:gravity="center" />
        </LinearLayout>

        <is.yranac.canary.ui.views.ButtonPlus
            android:id="@+id/view_device_btn"
            style="@style/white_transparent_rectangle_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginStart="@dimen/standard_margin"
            android:text="@string/view_device" />
    </RelativeLayout>
</layout>