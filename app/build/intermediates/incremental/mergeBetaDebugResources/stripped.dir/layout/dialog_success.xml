<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black_eighty"
    android:padding="@dimen/standard_margin">
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:src="@drawable/icn_spinner_checkmark"/>
    <is.yranac.canary.ui.views.TextViewPlus
        android:id="@+id/loading_message"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/success_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/standard_margin"
        android:textColor="@color/white"
        android:text="@string/dialog_success"
        app:customFont="Gibson-Light.otf"/>
</RelativeLayout>