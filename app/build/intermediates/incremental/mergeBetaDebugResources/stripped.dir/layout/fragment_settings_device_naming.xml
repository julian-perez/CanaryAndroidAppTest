<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

                 
                          
                             

               
                        
                                       
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:tag="layout/fragment_settings_device_naming_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/device_naming_header"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentTop="true" android:tag="binding_1">

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/header_title_text_view"
                style="@style/large_text_view"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:gravity="center"
                android:text="@string/device_location"
                android:tag="binding_2"                                    />

            <is.yranac.canary.ui.views.TextViewPlus
                android:id="@+id/header_title_text_view_small"
                style="@style/setup_medium_text_view_black"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:gravity="center"
                android:text="@string/device_location"
                android:tag="binding_3"                                    />

            <include
                layout="@layout/layout_gray_bar_with_full_margin"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:background="@color/very_light_gray" />
        </RelativeLayout>

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/next_btn"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/device_naming_header"
            android:divider="@null"
            android:scrollbars="none" />


        <is.yranac.canary.ui.views.ButtonPlus
            android:id="@+id/next_btn"
            style="@style/new_green_rect_action_button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginStart="@dimen/standard_margin"
            android:text="@string/next" />

    </RelativeLayout>
         